console.log(multiple(6, 545))

function multiple(a, b) {
    return a * b;
}


let day = 24;
let month = 5;
let year = 2023;
let dayUntilTheTenth = day;
let monthUntilTheTenth = month;

console.log(buildDate(day, month, year));

function buildDate(day, month, year) {
    if (day < 10) dayUntilTheTenth = `0${day}`
    if (month < 10) monthUntilTheTenth = `0${month}`
    return `${dayUntilTheTenth}/${monthUntilTheTenth}/${year}`
}


console.log(isAdult(19));

function isAdult(age) {
   return age >= 18;
}



getMonthByNumber();
let monthInput = prompt('Enter month number');
let monthNumber = Number(monthInput);

function getMonthByNumber(monthNumber) {
    switch (monthNumber) {
        case 1:
            return('january');
        break;

        case 2:
            return('february');
        break;

        case 3:
            return('march');
        break;

        case 4:
            return('april');
        break;

        case 5:
            return('may');
        break;

        case 6:
            return('june');
        break;

        case 7:
            return('july');
        break;

        case 8:
            return('august');
        break;

        case 9:
            return('september');
        break;

        case 10:
            return('october');
        break;

        case 11:
            return('november');
        break;

        case 12:
            return('december');
        break;
    }
}

console.log(getMonthByNumber(monthNumber));



convertRub();

let USD = 0.012;
let EUR = 0.011;
let KZT = 5.58;
let AED = 0.045;

console.log(convertRub(10000,'EUR'));

function convertRub(valueRub, currency) {
    switch (currency) {
        case 'USD':
            return(valueRub * USD)
        break;

        case 'EUR':
            return(valueRub * EUR)
        break;

        case 'KZT':
            return(valueRub * KZT)
        break;

        case 'AED':
            return(valueRub * AED)
        break;
    }
    return currency;
}


const valueRub = 2;
const currency = "KZT";
const RUB_USD_EXCHANGE_RATE = 0.012505;
const RUB_EUR_EXCHANGE_RATE = 0.011639;
const RUB_KZT_EXCHANGE_RATE = 5.59;
const RUB_AED_EXCHANGE_RATE = 0.045882;
const targetCurrency = convertRub(valueRub, currency);
function convertRub(valueRub, currency) {
switch (currency) {
case "USD":
currency = `${valueRub} * ${RUB_USD_EXCHANGE_RATE}`;
break;
case "EUR":
currency = `${valueRub} * ${RUB_EUR_EXCHANGE_RATE}`;
break; 
case "KZT":
currency = `${valueRub} * ${RUB_KZT_EXCHANGE_RATE}`;
break;
case "AED":
currency = `${valueRub} * ${RUB_AED_EXCHANGE_RATE}`;
break;
default: alert("Неизвестное значение");
}
return valueRub, currency;
}
convertRub(valueRub, currency);
